<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    tools:context="me.kevinkang.sightreadingskillbuilder.MainActivity">

    <TextView
        android:id="@+id/completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textColor="#00bfa5"/>

    <TextView
        android:id="@+id/outOfText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/completed"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="10dp"
        android:text="out of"/>

    <TextView
        android:id="@+id/totalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/outOfText"
        android:paddingTop="10dp"
        android:textColor="#d500f9"/>

    <Chronometer
        android:id="@+id/chrono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:format="%s"
        android:paddingTop="10dp"
        android:textColor="#2962ff"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/elapseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/chrono"
        android:paddingTop="10dp"
        android:text="Time Elapsed:  "/>


    <TextView
        android:id="@+id/score_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/chrono"
        android:text="@string/high_score_default"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#d500f9"/>

    <TextView
        android:id="@+id/high_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/elapseText"
        android:layout_toLeftOf="@id/score_value_text"
        android:text="High Score: "
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/compliment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/completed"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/high_score_text"
        android:weightSum="8.5">

        <ImageView
            android:id="@+id/noteImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="0dp"
            android:layout_weight="3"
            android:src="@drawable/placeholder"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/noteA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkIfCorrect"
                android:text="A"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/noteB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkIfCorrect"
                android:text="B"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/noteC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkIfCorrect"
                android:text="C"
                android:textAllCaps="false"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/noteD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkIfCorrect"
                android:text="D"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/noteE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkIfCorrect"
                android:text="E"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/noteF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkIfCorrect"
                android:text="F"
                android:textAllCaps="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/noteG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkIfCorrect"
                android:text="G"
                android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/start"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="intiateGame"
                android:text="New Game"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
